{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "env": {
    "node": true
  },
  "ignorePatterns": [
    "node_modules",
    "/dist"
  ],
  "plugins": [
    "only-warn",
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "eqeqeq": "warn",
    "semi": "warn"
  }
}
